@{
    ViewData["Title"] = "Pizzeria da Ericchi";
}

@model Pizza

<h1 class="text-5xl font-bold mt-0 mb-6">Dettagli della pizza</h1>
@if (Model.Image.StartsWith("http"))
{
    <img src="@Model.Image" class="max-w-full h-auto" alt="Pizza" />
}
else
{
    <img src="~/img/@Model.Image" class="max-w-full h-auto" alt="Pizza" />
}
<h3 class="text-3xl font-bold mb-8">@Model.Title</h3>
<p>@Model.Description</p>
<p class="font-bold text-lg mb-3">@Model.Price.ToString("C2")</p>